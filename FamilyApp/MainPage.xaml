<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FamilyApp.MainPage"
             Title="Семейный компаньон">

    <Grid>
        <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ImageButton
            Source="tree.png"
            Grid.Column="0"
            Grid.Row="0"
            BackgroundColor="Wheat"
            Clicked="TreeClicked"/>
        <ImageButton
            Source="pirog.png"
            Grid.Column="0"
            Grid.Row="1"
            BackgroundColor="Pink"
            Clicked="OnCounterClicked"/>
    </Grid>
        

</ContentPage>
